let x = 4; // вводим переменную х

x >= 3 && x <= 7 // спрашиваем входит ли х в отрезок от 3 до 7
  ? console.log("х принадлежит отрезку") // если входит выводим эту строку
  : console.log("х не принадлежит отрезку "); // если не входит выводим эту строку


//  задание 3

let login = "Сотрудник"; //переменная login

login == "Сотрудник" //спрашиваем login являеться сотрудников
  ? console.log("привет") // если являеться выводим привет
  : login == "Директор" // спрашиваем являеться ли он директором
  ? console.log("Здравствуйте") // если являеться то выводим здравствуйте
  : login == "" // спрашиваем записано ли что то в строку вообще
  ? console.log("нет логина") // если нет выводим нет логина
  : console.log(""); // если в строке что то другое выводим пустату

